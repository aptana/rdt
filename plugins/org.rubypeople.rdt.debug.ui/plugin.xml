             id="org.eclipse.search.SearchResultView"
             relationship="stack"
             relative="org.eclipse.ui.console.ConsoleView"
             visible="false"/>
       <view
             id="org.rubypeople.rdt.ui.RubyExplorer"
             relationship="stack"
             relative="org.eclipse.debug.ui.DebugView"
             visible="false"/>
    </perspectiveExtension>
 </extension>
 
