         <part
               id="org.rubypeople.rdt.ui.ExternalRubyEditor">
         </part>
         <part
               id="org.rubypeople.rdt.ui.ProjectsView">
         </part>
         <part
               id="org.rubypeople.rdt.ui.TypesView">
         </part>
         <part
               id="org.rubypeople.rdt.ui.MembersView">
         </part>
      </actionSetPartAssociation>
   </extension>
	
